<Home>:
    BoxLayout:
        orientation:'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, .9
            Rectangle:
                pos: self.pos
                size: self.size
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'top'
            GridLayout:
                rows: 1
                cols: 3
                size_hint: 1, .07
                canvas:
                    Color:
                        rgba: .03, .56, .74, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation:'horizontal'
                    padding:20, 10, 20, 10
                    canvas.after:
                        Rectangle:
                            pos: ((self.pos[0]+10), (self.pos[1]+8))
                            size: ((self.size[0]/13), (self.size[1]-18))
                            source: root.get_icon('ic_applogin_blue')
                    Label:
                        text:'        '+root.get_appname()
                        text_size: self.size
                        halign:'left'
                        valign: 'middle'

                BoxLayout:
                    orientation:'horizontal'
                    TextInput:
                        font_size:16
                        padding: 15, 15, 15, 0
                        hint_text: 'Search'
                        hint_text_color: 1,1,1,.7
                        foreground_color: 1,1,1,1
                        cursor_color: 1,1,1,1
                        write_tab:False
                        multiline: False
                        background_color:(0,0,0,.1)

                BoxLayout:
                    orientation:'horizontal'
                    padding: 30, 0, 10, 0
                    Button:
                        text:'Username'
                        background_color: (0,0,0,0)
                        on_press: root.go('profile')
            BoxLayout:
                orientation:'vertical'
                Label:
                    text:'Welcome to [b][{}][/b]'.format(root.get_appname())
                    font_size:40
                    color: 0, 0, 0, .3
                    markup:True


<Profile>:
