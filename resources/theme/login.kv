<Index>:
    BoxLayout:
        orientation:'vertical'
        padding:200, 80, 200, 80
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source:root.get_background()
        BoxLayout:
            orientation:'vertical'
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation:'vertical'
                canvas:
                    Color:
                        rgba: .03, .56, .74, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: (10.0, 10.0), (10.0, 10.0), (0.0, 0.0), (0.0, 0.0)
                BoxLayout:
                    orientation:'vertical'
                    padding:0,50,0,50
                    size_hint: 1, .5
                    Label:
                        text:root.get_appname()
                        font_size:30
                        size_hint: 1, .5
                    Image:
                        source:root.get_icon('ic_applogin_blue')
            BoxLayout:
                orientation:'horizontal'
                padding:50, 0, 50, 50
                size_hint: 1, .5
                spacing:30
                BoxLayout:
                    padding:5
                    size_hint: 1, .5
                    canvas:
                        Color:
                            rgb: .03, .56, .74
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: (05.0, 05.0), (05.0, 05.0), (05.0, 05.0), (05.0, 05.0)
                    Button:
                        text:'Sign In'.upper()
                        background_color: (1, 1, .1, 0)
                        on_press:root.go('sign_in')

                BoxLayout:
                    padding:5
                    size_hint: 1, .5
                    canvas:
                        Color:
                            rgb: .03, .56, .74
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: (05.0, 05.0), (05.0, 05.0), (05.0, 05.0), (05.0, 05.0)
                    BoxLayout:
                        canvas:
                            Color:
                                rgb: 1, 1, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        Button:
                            text:'Sign Up'.upper()
                            color: .03, .56, .74, 1
                            background_color: (1, 1, 1, 0)
                            on_press:root.go('sign_up')

<SignIn>:
    BoxLayout:
        orientation:'vertical'
        padding:200, 80, 200, 80
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source:root.get_background()
        BoxLayout:
            orientation:'vertical'
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation:'vertical'
                size_hint: 1, .3
                canvas:
                    Color:
                        rgba: .03, .56, .74, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: (10.0, 10.0), (10.0, 10.0), (0.0, 0.0), (0.0, 0.0)
                BoxLayout:
                    orientation:'vertical'
                    padding:0,10,0,10
                    Label:
                        text:root.get_name()
                        font_size:20
                    Image:
                        source:root.get_icon('lock')
            BoxLayout:
                orientation:'vertical'
                padding:100, 50, 100, 50
                spacing:25
                BoxLayout:
                    size_hint: 1, .1
                    TextInput:
                        id:nick
                        padding: 15, 15, 15, 5
                        hint_text: 'Username'
                        font_size:15
                        write_tab:False
                        multiline: False
                        background_color:(0,0,0,.05)
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: 1, .1
                    TextInput:
                        id:password
                        padding: 15, 15, 15, 5
                        hint_text: 'Password'
                        font_size:15
                        write_tab:False
                        multiline: False
                        password: True
                        background_color:(0,0,0,.05)
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: .3, .1
                    CheckBox:
                        size_hint: .20, 1
                        background_checkbox_down: root.get_icon("checkbox")
                    Label:
                        text:'Keep me logged in'
                        size_hint: 1, 1
                        color: (0,0,0,1)
                BoxLayout:
                    size_hint: 1, .1
                    canvas:
                        Color:
                            rgba: .03, .56, .74, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: (05.0, 05.0), (05.0, 05.0), (05.0, 05.0), (05.0, 05.0)
                    Button:
                        text:root.get_name()
                        background_color: (1, 1, 1, 0)
                        on_press: root.go('home')

